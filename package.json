{
  "name": "lux-framework",
  "version": "1.1.7",
  "description": "Build scalable, Node.js-powered REST APIs with almost no code.",
  "repository": "github:postlight/lux",
  "keywords": [
    "mvc",
    "api",
    "lux",
    "jsonapi",
    "json-api",
    "rest",
    "framework"
  ],
  "main": "src/index.js",
  "bin": {
    "lux": "bin/lux"
  },
  "scripts": {
    "build": "rollup -c",
    "clean": "shx rm -rf coverage dist test/test-app/dist",
    "codecov": "codecov",
    "flow": "flow check",
    "types": "shx rm -rf flow-typed && flow-typed install",
    "lint": "remark . && eslint .",
    "test": "jest -i"
  },
  "author": "Zachary Golba",
  "license": "MIT",
  "homepage": "https://lux.postlight.com",
  "bugs": {
    "url": "https://github.com/postlight/lux/issues"
  },
  "engines": {
    "node": ">= 6.0"
  },
  "dependencies": {
    "ansi-regex": "2.1.1",
    "babel-eslint": "7.1.1",
    "chalk": "1.1.3",
    "commander": "2.9.0",
    "eslint": "3.16.1",
    "fb-watchman": "2.0.0",
    "inflection": "1.12.0",
    "knex": "0.12.7",
    "ora": "1.1.0",
    "qs": "6.3.1",
    "rollup": "0.41.4",
    "rollup-plugin-alias": "1.2.0",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-eslint": "3.0.0",
    "rollup-plugin-json": "2.1.0",
    "rollup-plugin-lux": "3.0.0",
    "rollup-plugin-node-resolve": "2.0.0",
    "source-map-support": "0.4.11"
  },
  "devDependencies": {
    "babel-core": "6.23.1",
    "babel-jest": "19.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.23.0",
    "babel-preset-lux": "2.0.1",
    "codecov": "1.0.1",
    "eslint-config-airbnb-base": "11.1.0",
    "eslint-plugin-flowtype": "2.30.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jest": "19.0.1",
    "faker": "4.1.0",
    "flow-bin": "0.40.0",
    "flow-typed": "2.0.0",
    "jest": "19.0.2",
    "jest-cli": "19.0.2",
    "object.entries": "1.0.4",
    "remark-cli": "3.0.0",
    "remark-lint": "6.0.0",
    "remark-preset-lint-recommended": "2.0.0",
    "shx": "0.2.2"
  },
  "jest": {
    "testRegex": "\\.test\\.js$",
    "setupFiles": [
      "./test/index.js"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/test/",
      "/__tests__/",
      "/node_modules/"
    ]
  }
}
